{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/syncFixtures",
      "schedule": "0 0 * * *"
    }
  ]
}
